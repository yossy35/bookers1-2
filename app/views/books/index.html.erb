<h1>Books一覧表示</h1>

<table>
<tr>
  <th>Title</th>
  <th>Body</th>
  <th>　</th>
</tr>

<% @books.each do |book| %>
<tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td>
    <%= link_to "Show", book_path(book) %>
    <%= link_to "Edit", edit_book_path(book) %>
    <%= link_to "destroy", book_path(book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  </td>
</tr>
<% end %>
</table>


<h2>New book新規投稿</h2>

<%= form_with model: @book do |f| %>
  Title<br>
  <%= f.text_field :title %><br>
  Body<br>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>
<% end %>
