<h1>Books一覧表示</h1>

<table>
<tr>
  <th>Title</th>
  <th>Body</th>
  <th>　</th>
</tr>

<% @books.each do |book| %>
<tr>
  <td><%= link_to book.title, book_path(book.id) %></td>
  <td><%= link_to book.body, book_path(book.id) %></td>
  <td>show edit destroy</td>
</tr>
<% end %>
</table>


<h2>New book新規投稿</h2>

<%= form_with model: @book do |f| %>
  Title<br>
  <%= f.text_field :title %><br>
  Body<br>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>
<% end %>
